{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/billing-service/src/main.ts",
        "outFiles": ["${workspaceFolder}/billing-service/dist/**/*.js"],
        "preLaunchTask": "tsc: build - billing-service",
        "cwd": "${workspaceFolder}/billing-service",
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  